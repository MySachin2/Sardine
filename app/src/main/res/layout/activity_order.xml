<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fish.sardine.sardine.OrderDetailActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_image"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:transitionName="image_trans"
        />
    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:realtimeBlurRadius="20dp"
        app:realtimeOverlayColor="#8000" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/malayalam_text"
        android:layout_below="@+id/image"
        android:transitionName="malayalam_trans"
        android:textSize="20sp"
        android:text="Chemmeen"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"

        />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/english_text"
        android:layout_below="@+id/malayalam_text"
        android:transitionName="eng_trans"
        android:text="Chemmeen"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/english_text"
        android:id="@+id/linear_layout_price"
        android:gravity="center"
        android:layout_marginTop="7dp">
        <android.support.v7.widget.AppCompatTextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rupee"
            android:textSize="15sp"
            android:textColor="#FFF"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/price"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_price"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:transitionName="price_trans"
            android:textColor="#FFF"
            />

    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/linear_layout_price">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            android:text="Quantity"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="#FFF"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/remove_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_remove_24dp"
            android:layout_gravity="center"
            android:layout_weight="0.3"
           />
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textColorHint="#000">
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quantity"
                android:inputType="numberDecimal"
                android:textColor="#FFF"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_24dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"/>
    </android.support.v7.widget.LinearLayoutCompat>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/confirm_layout"
        >
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#00FFFFFF"
            android:text="Confirm Order"
            android:textColor="#FFF"
            />
        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:realtimeBlurRadius="10dp"
            app:realtimeOverlayColor="#8555" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/confirm_layout"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Total Price   : "
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_marginLeft="16dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>

</RelativeLayout>
